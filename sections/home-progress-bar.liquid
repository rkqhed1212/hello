  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-heading .dt-sc-main-heading { color: var(--DTColor_Heading); color:{{ section.settings.section_heading_color }}; } 
  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-heading .dt-sc-sub-heading { color: var(--DTColor_Heading); color:{{ section.settings.section_sub_heading_color }};} 
  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-heading .dt-sc-heading-description { color: var(--DTColor_Heading); color:{{ section.settings.section_description_color }}; } 
  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-heading .dt-sc-btn { 
    background: var(--DT_Button_BG_Color); 
      color: var(--DT_Button_Text_Color);
      background:{{ section.settings.section_button_bg_color }}; 
      color:{{ section.settings.section_button_text_color }}; }
  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-heading .dt-sc-btn:hover { 
    background: var(--DT_Button_BG_Hover_Color);
      background:{{ section.settings.section_button_hover_bg_color }};
      color: var(--DT_Button_Text_Hover_Color);
        color:{{ section.settings.section_button_hover_text_color }}; }


  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-overlay:before { 
    color: var(--DTTertiaryColor); 
      color: {{ section.settings.background_color }};    
      background: currentcolor; 
      opacity: {{ section.settings.overlay_transparency }}; }

  #shopify-section-{{section.id}}.home-progress-bar  .dt-sc-main-title { color: var(--DTColor_Heading); color: {{section.settings.banner_heading_color}}; }
  #shopify-section-{{section.id}}.home-progress-bar  .dt-sc-sub-title { color: var(--DTColor_Heading); color: {{section.settings.banner_sub_heading_color}}; text-transform:uppercase;font-family: var(--DTFontTypo_Body);letter-spacing: 1.5px;font-weight: 600; position:relative; }
  #shopify-section-{{section.id}}.home-progress-bar  .dt-sc-description { color: var(--DTColor_Body); color: {{section.settings.banner_description_color}}; }
  #shopify-section-{{section.id}}.home-progress-bar  .dt-sc-btn:not(.close_icon) { 
    background: var(--DT_Button_BG_Color); color: var(--DT_Button_Text_Color);
      background: {{section.settings.banner_button_bg_color}}; color: {{section.settings.banner_button_text_color}}; 
  }
  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-progress-banner-inner .dt-sc-btn:not(.close_icon):hover { 
    background: var(--DT_Button_BG_Hover_Color); color: var(--DT_Button_Text_Hover_Color);
      background: {{section.settings.banner_button_hover_bg_color}}; color: {{section.settings.banner_button_hover_text_color}}; 
  }

  .dt-sc-progress-banner-content *, .dt-sc-progress-banner-content *:not(:only-child) { margin: 0; }
  .dt-sc-progress-banner-content *:not(:last-child) { margin: 0 0 20px 0; }
 
  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-progress-banner-section { 
    {% if section.settings.enable_box_shadow %} box-shadow: var(--DTboxShadow); {% endif %} 
      border-radius: var(--DTRadius); border-radius: {{ section.settings.border_radius }}px; 
        }
  
  #shopify-section-{{section.id}}.home-progress-bar .dt-sc-progress-banner-section > img {
    width: 100%; object-fit: cover; object-position: center; border-radius:var(--DTRadius);
  }

 
  .dt-sc-progress-banner-section { width: 100%; position: relative; overflow: hidden; }
  .dt-sc-progress-banner-section iframe { width: 100%; }

 

 

  .dt-sc-progress-banner-section.with-overlay:before { content: ""; display: block; width: 100%; height: 100%; transition: var(--DTBaseTransition); position: absolute; }

  .dt-sc-progress-banner-section .dt-sc-progress-banner-content { position: absolute; height: auto; width: auto; left: 0; top: 0; display: flex;
    flex-wrap: wrap; -webkit-box-orient: vertical; -webkit-box-direction: normal; flex-direction: column; height: 100%; width: 100%;
  }

  .dt-sc-progress-banner-section .dt-sc-progress-banner-content .dt-sc-progress-banner-inner { padding: 30px; }
  .dt-sc-progress-banner-section .dt-sc-progress-banner-content .dt-sc-progress-banner-inner .dt-sc-btn { display: inline-block; }

  .dt-sc-progress-banner-section .dt-sc-progress-banner-content.default { -webkit-box-align: start; align-items: flex-start;
    -webkit-box-pack: start; -ms-flex-pack: start; justify-content: flex-start;
  }
  .dt-sc-progress-banner-section .dt-sc-progress-banner-content.center { -webkit-box-align: center; -ms-flex-align: center; align-items: center;
    -webkit-box-pack: center; -ms-flex-pack: center; justify-content: center; text-align: center;
  }

   .dt-sc-progress-banner-section .close_icon:focus, .dt-sc-progress-banner-section .close_icon:hover { filter: alpha(opacity=75); opacity: .75; }

 
   @media (max-width: 1024px) {
     
     .we-take .dt-sc-column.two-column{ grid-template-columns: 1fr;}
   }
  
 
  
  
  {% assign margin = section.settings.margin | split: ',' %}
  {% assign margin_top = margin[0] %}
  {% assign margin_bottom = margin[1] %} 
  {% assign padding = section.settings.padding | split: ',' %}
  {% assign padding_top = padding[0] %}
  {% assign padding_bottom = padding[1] %} 
