   .dt-sc-progress-banner-content .video-word{ width:auto; height: 50px; color: var(--DTSecondaryColor); background:var(--DTBodyBGColor); bottom:30px; position: absolute; left:75px; border-radius:5px;
    line-height: 53px; display:flex; align-items: center; text-align: center; transition: var(--DTBaseTransition); padding:10px; border-top-left-radius: 0;border-bottom-left-radius: 0; }
  .video-left .progress-bar p{color:var(--DTTertiaryColor); margin-bottom:15px;}
  .video-left .dt-sc-description{margin-bottom:30px; color:var(--DTTertiaryColor);}
  .we-take .video-left .dt-sc-sub-title{position:relative;}
   .we-take .video-left .dt-sc-sub-title:after{content: ''; position:absolute; width: 25px;height: 5px;background-image:url({{ "right-sub.png" | asset_url }});margin-left: 10px;top:12px;}

    {% for block in section.blocks %}    
  #shopify-section-{{section.id}}.home-progress-bar .progress-{{block.id}} .range {height:15px;width:100%;background-color:var(--DT_Warning_Color);background-color:{{block.settings.progressbar_bg_color}};margin-bottom:60px;}   
  #shopify-section-{{section.id}}.home-progress-bar .range .progress-{{block.id}}-value {background-color: var(--DTPrimaryColor); background-color:{{block.settings.progress_bg_color}}; height:15px; position:relative;}
  #shopify-section-{{section.id}}.home-progress-bar .range .progress-{{block.id}}-value {width: {{block.settings.range}}%;}
  #shopify-section-{{section.id}}.home-progress-bar .range .progress-{{block.id}}-value  span {position:absolute;right: -60px;
    font-size: 18px;top: -16px;background:var(--DTBodyBGColor);padding: 5px;border-radius: 50px;height: 50px;width: 50px; display: flex;align-items: center;    border: 1px solid rgba(0,0,0,0.04);}
   {% endfor %}
